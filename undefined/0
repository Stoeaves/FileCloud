    <script>
        setTimeout(function() {
            // 登录表单处理
            const loginForm = document.getElementById('login-form');
            const loginContainer = document.getElementById('login-container');
            const adminContainer = document.getElementById('admin-container');
            const tokenError = document.getElementById('token-error');
            const logoutBtn = document.getElementById('logout-btn');
            
            // 侧边栏导航处理
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = {
                'tools-list': document.getElementById('tools-list-section'),
                'add-tool': document.getElementById('add-tool-section'),
                'edit-tool': document.getElementById('edit-tool-section')
            };
            
            // 移动端菜单切换
            const sidebar = document.getElementById('sidebar');
            const sidebarOverlay = document.getElementById('sidebar-overlay');
            const menuToggle = document.createElement('button');
            menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
            menuToggle.style.position = 'fixed';
            menuToggle.style.top = '15px';
            menuToggle.style.left = '15px';
            menuToggle.style.zIndex = '101';
            menuToggle.style.background = 'var(--primary-color)';
            menuToggle.style.color = 'white';
            menuToggle.style.border = 'none';
            menuToggle.style.borderRadius = '50%';
            menuToggle.style.width = '40px';
            menuToggle.style.height = '40px';
            menuToggle.style.display = 'none';
            menuToggle.style.justifyContent = 'center';
            menuToggle.style.alignItems = 'center';
            menuToggle.style.cursor = 'pointer';
            document.body.appendChild(menuToggle);
            
            // 检查窗口大小
            function checkWindowSize() {
                if (window.innerWidth <= 992) {
                    menuToggle.style.display = 'flex';
                } else {
                    menuToggle.style.display = 'none';
                    sidebar.classList.remove('active');
                    sidebarOverlay.classList.remove('active');
                }
            }
            
            // 初始化检查
            checkWindowSize();
            
            // 窗口大小改变时检查
            window.addEventListener('resize', checkWindowSize);
            
            // 菜单切换点击事件
            menuToggle.addEventListener('click', function() {
                sidebar.classList.add('active');
                sidebarOverlay.classList.add('active');
            });
            
            // 遮罩层点击事件
            sidebarOverlay.addEventListener('click', function() {
                sidebar.classList.remove('active');
                sidebarOverlay.classList.remove('active');
            });
            
            // 登录表单提交
            loginForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                startLoading();

                const token = localStorage.getItem("token") ? localStorage.getItem("token") : document.getElementById('token').value;
                
                // 重置错误信息
                tokenError.style.display = 'none';

                const formData = new FormData();
                formData.append('token', token);
                const request = await fetch(`https://tools-api.seave.top/checkAdmin`, {
                    method: "POST",
                    body: formData
                });
                const response = await request.json();
                const data = response.data;

                if (response.code === 400) window.close();

                if (response.code === 200) {
                    localStorage.setItem("token", token);
                    loginContainer.style.display = 'none';
                    adminContainer.style.display = 'block';

                    // 刷新工具列表
                    await refreshToolList();
                    stopLoading();
                }
            });
            
            // 侧边栏导航点击事件
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 移除所有active类
                    navLinks.forEach(l => l.classList.remove('active'));
                    
                    // 添加当前active类
                    this.classList.add('active');
                    
                    // 获取数据部分
                    const section = this.getAttribute('data-section');
                    
                    // 隐藏所有部分
                    Object.values(sections).forEach(sec => {
                        sec.style.display = 'none';
                    });
                    
                    // 显示选中的部分
                    sections[section].style.display = 'block';
                    
                    // 更新标题
                    document.querySelector('.header-title').textContent = this.querySelector('span').textContent;
                    
                    // 如果是移动端，点击后关闭侧边栏
                    if (window.innerWidth <= 992) {
                        sidebar.classList.remove('active');
                        sidebarOverlay.classList.remove('active');
                    }
                });
            });
            
            // 添加工具按钮点击事件
            document.getElementById('add-tool-btn').addEventListener('click', function() {
                // 移除所有active类
                navLinks.forEach(l => l.classList.remove('active'));
                
                // 添加add-tool active类
                document.querySelector('[data-section="add-tool"]').classList.add('active');
                
                // 隐藏所有部分
                Object.values(sections).forEach(sec => {
                    sec.style.display = 'none';
                });
                
                // 显示添加工具部分
                sections['add-tool'].style.display = 'block';
                
                // 更新标题
                document.querySelector('.header-title').textContent = '添加工具';
                
                // 如果是移动端，点击后关闭侧边栏
                if (window.innerWidth <= 992) {
                    sidebar.classList.remove('active');
                    sidebarOverlay.classList.remove('active');
                }
            });
            
            // 添加工具表单提交
            document.getElementById('add-tool-form').addEventListener('submit', async function(e) {
                e.preventDefault();

                startLoading(async ()=>{
                    const name = document.querySelector("#add-tool-form #tool-name").value;
                    const icon = document.querySelector("#add-tool-form #tool-icon").value;
                    const css = document.querySelector("#add-tool-form #tool-css").value;
                    const html = document.querySelector("#add-tool-form #tool-html").value;
                    const js = document.querySelector("#add-tool-form #tool-js").value;

                    const formData = new FormData();
                    formData.append("token", localStorage.getItem("token"));
                    formData.append('method', "PUT");
                    formData.append('name', name);
                    formData.append('icon', icon);
                    formData.append('style', await encodeBase64(css));
                    formData.append('html', await encodeBase64(html));
                    formData.append('js', await encodeBase64(js));

                    fetch(`https://tools-api.seave.top/toolManager`, {
                        method: 'POST',
                        body: formData,
                    })
                    .then(response => response.json())
                    .then(async (data) => {
                        if (data.code === 400) window.close();
                        if (data.code === 200) {
                            alert('添加成功');
                            document.querySelector("#add-tool-form #tool-name").value=null;
                            document.querySelector("#add-tool-form #tool-icon").value=null;
                            document.querySelector("#add-tool-form #tool-css").value=null;
                            document.querySelector("#add-tool-form #tool-html").value=null;
                            document.querySelector("#add-tool-form #tool-js").value=null;
                            // 返回工具列表
                            document.querySelector('[data-section="tools-list"]').click();
                            await refreshToolList();
                            stopLoading();
                        }
                    })
                    .catch(e=>{
                        console.error(`添加失败：${e}`);
                        alert(`添加失败：${e}`);
                        stopLoading();
                    });
                });
            });

            document.getElementById('edit-tool-form').addEventListener('submit', async function (e){
                e.preventDefault();

                startLoading(async()=>{
                    const id = document.querySelector("#edit-tool-form input#tool-id").value;
                    const name = document.querySelector("#edit-tool-form #tool-name").value;
                    const icon = document.querySelector("#edit-tool-form #tool-icon").value;
                    const css = document.querySelector("#edit-tool-form #tool-css").value;
                    const html = document.querySelector("#edit-tool-form #tool-html").value;
                    const js = document.querySelector("#edit-tool-form #tool-js").value;

                    const formData = new FormData();
                    formData.append("token", localStorage.getItem("token"));
                    formData.append('method', "POST");
                    formData.append('id', id);
                    formData.append('name', name);
                    formData.append('icon', icon);
                    formData.append('style', await encodeBase64(css));
                    formData.append('html', await encodeBase64(html));
                    formData.append('js', await encodeBase64(js));

                    fetch(`https://tools-api.seave.top/toolManager`, {
                        method: 'POST',
                        body: formData,
                    })
                    .then(response => response.json())
                    .then(async (data) => {
                        if (data.code === 400) window.close();
                        if (data.code === 200) {
                            alert('修改成功');
                            // 返回工具列表
                            document.querySelector('[data-section="tools-list"]').click();
                            await refreshToolList();
                            stopLoading();
                        }
                    })
                    .catch(e=>{
                        console.error(`修改失败：${e}`);
                        alert(`修改失败：${e}`);
                        stopLoading();
                    })
                });
            });
        }, 100);

        async function refreshToolList(){
            document.querySelector(".tools-table tbody").innerHTML = ``;
            const listReq = await fetch(`https://tools-api.seave.top/toolList`);
            const listResponse = await listReq.json();
            const list = listResponse.data;
            list.forEach(element => {
                const id = element.id;
                const icon = element.icon;
                const name = element.name;
                document.querySelector(".tools-table tbody").innerHTML += `<tr><td>${name}</td><td><img src="${icon}" alt="${name}" height="32" /></td><td>${id}</td><td><button class="action-btn" title="编辑" onclick="editTool(${id})"><i class="fas fa-edit"></i></button></td></tr>`;
            });
        }

        async function editTool(id){
            startLoading();

            const formData = new FormData();
            formData.append("id", id);
            
            const request = await fetch(`https://tools-api.seave.top/getTool`, {
                method: "POST",
                body: formData
            });

            if (!request.ok){
                console.error(`工具【${id}】获取失败：`, request.statusText);
                alert(`工具【${id}】获取失败：${request.statusText}`);
                return;
            }

            const response = await request.json();
            if (response.code === 400) window.close();
            const data = response.data;

            document.querySelector("#edit-tool-section span#tool-name").innerHTML = data.name;
            document.querySelector("#edit-tool-section span#tool-id").innerHTML = id;

            document.querySelector("#edit-tool-section input#tool-name").value = data.name;
            document.querySelector("#edit-tool-section input#tool-id").value = id;
            document.querySelector("#edit-tool-section textarea#tool-icon").value = data.icon;
            document.querySelector("#edit-tool-section textarea#tool-css").value = await decodeBase64(data.style);
            document.querySelector("#edit-tool-section textarea#tool-html").value = await decodeBase64(data.html);
            document.querySelector("#edit-tool-section textarea#tool-js").value = await decodeBase64(data.js);

            document.querySelector('[data-section="edit-tool"]').click();
            stopLoading();
        }

        async function encodeBase64(str) {
            const encoder = new TextEncoder();
            const data = encoder.encode(str);
            return btoa(String.fromCharCode(...new Uint8Array(data)));
        }

        async function decodeBase64(str) {
            const binaryStr = atob(str);
            const bytes = new Uint8Array(binaryStr.length);
            for (let i = 0; i < binaryStr.length; i++) {
                bytes[i] = binaryStr.charCodeAt(i);
            }
            const decoder = new TextDecoder();
            return decoder.decode(bytes);
        }

        function startLoading(callback = () => {}){
            const loadContainer = document.createElement('div');
            loadContainer.className = "loading-container";
            loadContainer.style.position = "fixed";
            loadContainer.style.top = "0";
            loadContainer.style.left = "0";
            loadContainer.style.width = "100%";
            loadContainer.style.height = "100%";
            loadContainer.style.display = "flex";
            loadContainer.style.justifyContent = "center";
            loadContainer.style.alignItems = "center";
            loadContainer.style.backgroundColor = "rgb(0 0 0 / 15%)";
            loadContainer.style.flexDirection = "column";
            loadContainer.style.backdropFilter = "blur(2px)";
            loadContainer.style.zIndex = "9999";

            const loadIcon = document.createElement('div');
            loadIcon.style.width = "60px";
            loadIcon.style.height = "60px";
            loadIcon.style.borderRadius = "50%";
            loadIcon.style.border = "3px solid #f0f0f0";
            loadIcon.style.borderTopColor = "#646cff";
            loadIcon.style.animation = "rotate 1s cubic-bezier(0.4, 0.1, 0.4, 1) infinite";

            const loadText = document.createElement('div');
            loadText.textContent = "加载中";
            loadText.style.fontSize = "14px";
            loadText.style.marginTop = "20px";
            loadText.style.color = "#1a1a1a";
            loadText.style.letterSpacing = "0.5px";
            loadText.style.fontWeight = "500";

            const animation = document.createElement('style');
            animation.innerHTML = `@keyframes rotate{0%{transform:rotate(0deg)}100%{transform:rotate(360deg)}}`;

            loadContainer.appendChild(animation);
            loadContainer.appendChild(loadIcon);
            loadContainer.appendChild(loadText);
            document.body.appendChild(loadContainer);

            callback();
        }

        function stopLoading(){
            document.querySelector('.loading-container').remove();
        }
    </script>
</body>
</html>